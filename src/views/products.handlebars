<section class="row" style="background-color: #eee;">
  <div class="profile-nav col-md-3">
    <div class="card" style="border-radius: 15px;">
      <div class="card-body text-center">
        <div class="mt-3 mb-4">
          <img
            src="https://www.freeiconspng.com/uploads/profile-icon-1.png"
            class="rounded-circle img-fluid"
            style="width: 100px;"
          />
        </div>
        <h4 class="mb-2">{{user.name}}</h4>
        <p class="text-muted mb-4">{{user.role}}
          <span class="mx-2">|</span>
          <a href="#!">{{user.email}}</a></p>
        <div class="d-flex flex-column gap-3">
          <a class="btn btn-primary btn-rounded mb-2" href="/chat">
            Chat
          </a>
          <a
            class="btn btn-primary btn-rounded mb-2"
            href="/change-role"
          >
            Cambiar Rol
          </a>
          <a
            class="btn btn-primary btn-rounded mb-2"
            href="/carts/{{user.cartId}}"
          >
            Ir al carrito
          </a>
          <button
            type="button"
            class="btn btn-primary btn-rounded mb-2"
            id="buy-now"
          >
            Comprar Ahora
          </button>
          <a
            class="btn btn-primary btn-rounded mb-2"
            href="/logout"
          >
            Cerrar sesión
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="profile-info col-md-9">
    <div class="text-center container py-5">

      <h4 class="mt-4 mb-5"><strong>PRODUCTOS</strong></h4>
      {{#if payload.length}}
        <div class="row" id="container">
          {{#each payload}}
            <div class="col-lg-4 col-md-12 mb-4" data-id={{_id}}>
              {{#if images.length}}
                <img src={{images}} class="w-100" />
              {{/if}}
              <h5>{{title}}</h5>
              <p>{{description}}</p>
              <p><strong>Categoria: </strong>{{category}}</p>
              <p>${{price}}</p>
              <p><strong>Código: </strong>{{code}}</p>
              <p><strong>Existencias: </strong>{{stock}}</p>
              <p><strong>Dueño del producto: </strong>{{owner}}</p>
              <p><strong>Id del producto: </strong>{{_id}}</p>
              <button class="add-to-cart" data-id="{{_id}}">Agregar al carrito!</button>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div>
          <h2>No se encontraron productos...</h2>
        </div>
      {{/if}}
    </div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <span>Página actual: {{page}}</span>
        <div class="collapse navbar-collapse flex-row-reverse" id="navbarText">
          <span class="navbar-text float-rigth">
            <button class="btn btn-primary" id="prev-page-btn">Página anterior</button>
            <button class="btn btn-primary" id="next-page-btn">Página siguiente</button>
          </span>
        </div>
      </div>
    </nav>
  </div>

</section>

<script
  src="/js/products.js"
  data-page="{{page}}"
  data-has-prev-page={{hasPrevPage}}
  data-has-next-page={{hasNextPage}}
  data-user-cart-id="{{user.cartId}}"
  data-user-id="{{user.id}}"
></script>