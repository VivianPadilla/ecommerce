<section class="row" style="background-color: #eee;">
  <div class="profile-nav col-md-3">
    <div class="card" style="border-radius: 15px;">
      <div class="card-body text-center">
        <div class="mt-3 mb-4">
          <img src="https://www.freeiconspng.com/uploads/profile-icon-1.png" class="rounded-circle img-fluid"
            style="width: 100px;" />
        </div>
        <h4 class="mb-2">{{user.name}}</h4>
        <p class="text-muted mb-4">{{user.rol}}
          <span class="mx-2">|</span>
          <a href="#!">{{user.email}}</a>
        </p>
        <div class="d-flex flex-column gap-3">
          <a class="btn btn-primary btn-rounded mb-2" href="/chat">
            Chat
          </a>
          <a class="btn btn-primary btn-rounded mb-2" href="/change-rol">
            Cambiar Rol
          </a>
          <a class="btn btn-primary btn-rounded mb-2" href="/carts/{{user.cartId}}">
            Ir al carrito
          </a>
          <div id="create-products">
            <a class="btn btn-primary btn-rounded mb-2" href="/realtimeproducts" style="width: 100%">
              Crear Productos
            </a>
          </div>
          {{!-- <button
            type="button"
            class="btn btn-primary btn-rounded mb-2"
            id="buy-now"
          >
            Comprar Ahora
          </button> --}}
          <a class="btn btn-primary btn-rounded mb-2" href="/logout">
            Cerrar sesi칩n
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="profile-info col-md-9">
    <h4>PRODUCTOS</h4>
    {{#if payload.length}}
    <div style="display: grid;
  grid-template-columns: 1fr 1fr 1fr; grid-gap: 20px; gap: 20px;">
      {{#each payload}}
      <div class="card">
        {{#if images.length}}
        <img class="card-img" src={{images}}>
        {{/if}}
        <div class="card-body">
          <h4 class="card-title">{{title}}</h4>
          <h6 class="card-subtitle mb-2 text-muted">C칩digo: {{code}}</h6>
          <p class="card-text">{{description}}
          <p class="card-text"> <strong>Stock: </strong> {{stock}} </p>
          <p class="card-text"> <strong>Due침o del producto: </strong>{{owner}}</p>
          <p class="card-text">
            <small class="text-body-secondary">
              <strong>Categoria:</strong>
              {{category}}
            </small>
          </p>
          <div class="buy d-flex justify-content-between align-items-center" data-id={{_id}}>
            <div class="price text-success">
              <h5 class="mt-4">${{price}}</h5>
            </div>
            <button type="submit" class="btn btn-danger mt-3 add-to-cart">Agregar al carrito</button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <div>
      <h2>Lo sentimos, se ha agotado el producto 游땞</h2>
    </div>
    {{/if}}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <span>P치gina actual: {{page}}</span>
        <div class="collapse navbar-collapse flex-row-reverse" id="navbarText">
          <span class="navbar-text float-rigth">
            <button class="btn btn-primary" id="prev-page-btn">P치gina anterior</button>
            <button class="btn btn-primary" id="next-page-btn">P치gina siguiente</button>
          </span>
        </div>
      </div>
    </nav>
  </div>

</section>

<script src="/js/products.js" data-user-rol="{{user.rol}}" data-page="{{page}}" data-has-prev-page={{hasPrevPage}}
  data-has-next-page={{hasNextPage}} data-user-cart-id="{{user.cartId}}" data-user-id="{{user.id}}"></script>