<div class="container">
  <div>
    <button class="btn btn-primary mb-3" id="products">Volver a la tienda</button>
  </div>
  <div class="row align-items-start">    
    <div class="col">
      <h4>Crear producto</h4>
      <form id="formAddProduct">
        <div class="mb-3 row">
          <label for="code" class="col-sm-4 col-form-label">Código:</label>
          <div class="col-sm-8">
            <input
              type="number"
              class="form-control form-control-sm"
              id="code"
              name="code"
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="title" class="col-sm-4 col-form-label">Nombre:</label>
          <div class="col-sm-8">
            <input
              type="text"
              class="form-control form-control-sm"
              id="title"
              name="title"
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label
            for="description"
            class="col-sm-4 col-form-label"
          >Descripción:</label>
          <div class="col-sm-8">
            <input
              type="text"
              class="form-control form-control-sm"
              id="description"
              name="description"
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="price" class="col-sm-4 col-form-label">Precio:</label>
          <div class="col-sm-8">
            <input
              type="number"
              class="form-control form-control-sm"
              id="price"
              name="price"
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="stock" class="col-sm-4 col-form-label">Número de
            existencias:</label>
          <div class="col-sm-8">
            <input
              type="number"
              class="form-control form-control-sm"
              id="stock"
              name="stock"
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label
            for="category"
            class="col-sm-4 col-form-label"
          >Categoria:</label>
          <div class="col-sm-8">
            <input
              type="text"
              class="form-control form-control-sm"
              id="category"
              name="category"
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="status" class="col-sm-4 col-form-label">Estado:</label>
          <div class="col-sm-8">
            <input
              type="text"
              class="form-control form-control-sm"
              id="status"
              name="status"
              placeholder="true o false"
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="images" class="col-sm-4 col-form-label">URL de la imagen:</label>
          <div class="col-sm-8">
            <input
              type="text"
              class="form-control form-control-sm"
              id="images"
              name="images"
            />
          </div>
        </div>

        <input type="submit" class="btn btn-primary" value="Crear" />
      </form>
    </div>
    <div class="col">
      <h4>Eliminar producto</h4>

      <form id="formDeleteProduct">
        <div class="mb-3 row">
          <label for="productId" class="col-sm-4 col-form-label">Id del
            producto:</label>
          <div class="col-sm-8">
            <input
              type="text"
              class="form-control form-control-sm"
              id="productId"
              name="productId"
            />
          </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Eliminar" />
      </form>
    </div>
  </div>
</div>

<br />
<hr />
<br />

<div class="container py-5">

  <h4 class="mt-4 mb-5"><strong>PRODUCTOS</strong></h4>
  {{#if payload.length}}
    <div class="row" id="container">
      {{#each payload}}
        <div class="col-lg-4 col-md-12 mb-4" data-id={{_id}}>
          {{#if images.length}}
            <img src={{images}} class="w-100" />
          {{/if}}
          <h5>{{title}}</h5>
          <p>{{description}}</p>
          <p><strong>Categoria: </strong>{{category}}</p>
          <p>${{price}}</p>
          <p><strong>Código: </strong>{{code}}</p>
          <p><strong>Existencias: </strong>{{stock}}</p>
          <p><strong>Dueño del producto: </strong>{{owner}}</p>
          <p><strong>Id del producto: </strong>{{_id}}</p>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div>
      <h4>No se encontraron productos...</h4>
    </div>
  {{/if}}
</div>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <span>Página actual: {{page}}</span>
    <div class="collapse navbar-collapse flex-row-reverse" id="navbarText">
      <span class="navbar-text float-rigth">
        <button class="btn btn-primary" id="prev-page-btn">Página anterior</button>
        <button class="btn btn-primary" id="next-page-btn">Página siguiente</button>
      </span>
    </div>
  </div>
</nav>

<script src="/socket.io/socket.io.js"></script>
<script
  src="/js/realTimeProducts.js"
  data-page="{{page}}"
  data-has-prev-page={{hasPrevPage}}
  data-has-next-page={{hasNextPage}}
></script>